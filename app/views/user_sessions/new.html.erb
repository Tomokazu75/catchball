<div class="col-lg-6 mx-auto vh-100 d-flex align-items-center">
  <div class="w-75 mx-auto text-light">
    <h3 class="text-center">ログイン画面</h3>
    <%= form_with url: login_path, local: true do |f| %>
    <div>
      <%= f.label :email, class:"form-label" %>
      <%= f.email_field :email, class:"form-control" %>
    </div>
    <div>
      <%= f.label :password, class:"form-label" %>
      <%= f.password_field :password, class:"form-control" %>
    </div>
    <div>
      <%= f.submit "ログイン", class:"btn btn-primary mt-3" %>
    </div>
    <% end %>
    <div class="text-center mt-4">
      <%= link_to "新規ユーザー登録はこちら", new_user_path, class:"text-light" %>
    </div>
  </div>
</div>
